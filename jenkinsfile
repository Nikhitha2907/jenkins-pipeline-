pipeline {
    agent any
    stages {
        stage("Build") {
            steps {
                echo "Building ..."
            }
            post {
                always {
                    emailext(
                        mimeType: 'text/html',
                        to: 'kundanmarri1@gmail.com',
                        subject: "Jenkins Pipeline Status",
                        body: """
                            <html>
                                <body>
                                    <h1>Pipeline Completion Report</h1>
                                </body>
                            </html>
                        """,
                        attachLog: true
                    )
                }
            }
        }
        stage("Test") {
            steps {
                echo "Testing ..."
            }
        }
        stage("Deploy") {
            steps {
                echo "Deploying ..."
            }
        }
        stage("Complete") {
            steps {
                echo "Completed."
            }
        }
    }
}
